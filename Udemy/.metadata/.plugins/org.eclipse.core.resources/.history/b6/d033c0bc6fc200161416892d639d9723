import java.io.FileNotFoundException;

public class Application {
public static void main(String[] args) throws FileNotFoundException {
	TextProcess t1 = new TextProcess();
	String word = t1.getName();
	
	int wordCount = t1.getWordCount(word);
	int letterCount = t1.getLetterCount(word);
	System.out.println("This word: " + word);
	System.out.println("# of words: " + wordCount);
	System.out.println("# of Letters: " + letterCount);
}
}
