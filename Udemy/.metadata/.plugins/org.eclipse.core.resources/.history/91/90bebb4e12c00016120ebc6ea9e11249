	public void getLetterCount(){
		String[] values = word.split(" ");
		
		int startingNumberOfLetters = 0;
		for(int i=0;i<values.length;i++){
			int letters = values[i].length();
			startingNumberOfLetters = letters + startingNumberOfLetters ;
			
		}
	}
	
	
